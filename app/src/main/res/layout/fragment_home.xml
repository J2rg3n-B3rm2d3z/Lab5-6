<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.ui.HomeFragment"
    android:background="@drawable/img_bienvenida">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tvTituloArteLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/tamtexto1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:text="@string/strTituloHome"/>

    <TextView
        android:id="@+id/tvTituloVistasHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/strTituloHomeVistas"
        android:textColor="@color/white"
        android:textSize="@dimen/tamtexto2"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tvTituloArteLista"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>